{% extends 'layout.twig' %}

{% block body %}
    <h1>{{title}}</h1>
    <form method="post" action="http://localhost:3000/products/update/{{product._id}}">
		<table>
        <tr>
            <td><label for="libelle">Libelle</label></td>
            <td><input type="text" name="libelle" id="libelle" value={{product.Libelle}} /></td>
        </tr>
        <tr>
            <td><label for="prix">Price</label></td>
            <td><input type="number" name="prix" id="prix" value={{product.Prix}}  /></td>
        </tr>
        <tr>
            <td><label for="password">Description</label></td>
            <td><input type="text" name="description" id="description" value={{product.Description}}  /></td>
        </tr>
        <tr>
            <td><label for="quantite">Quantite</label></td>
            <td><input type="number" name="quantite" id="quantite" value={{product.Quantite}}  /></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Modifier produit" /></td>
        </tr>
    </table>
	</form>

{% endblock %}